/* pages/frontpage/index.wxss */
.img_box{
  display: flex;
  flex-wrap: wrap;
  width: 95%;
  /* height: 50rpx; */
  justify-content: left;
  align-items: baseline;
  margin-left: 34rpx;
}
.img_item_i{
  margin-right: 24rpx;
  margin-bottom: 27rpx;
  width: 130rpx;
  height: 130rpx;
}
.word {
  color: #A1A1A1;
  font-size: 24rpx;
}
.body {
  width: 670rpx;
  margin: 0 auto;
}
.body .header {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.body .header .date {
  height: 60rpx;
  width: 200rpx;
  background-color: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
}
.body .header .bindDate {
  display: flex;
  width: 80rpx;
  height: 80rpx;
  justify-content: center;
  align-items: center;
}
.body .header image {
  width: 37.5%;
}
.body .number {
  display: flex;
}
.body .number .sub_number {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx;
  align-items: center;
  justify-content: center;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(185, 185, 185, 0.5);
  border-radius: 10rpx;
}
.body .record {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  font-weight: bold;
  margin-top: 44rpx;
}
.body .record .remind {
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  background-color: var(--themeColor);
  color: #fff;
  border-radius: 30rpx;
}
.body .nav {
  display: flex;
  flex-direction: row;
  margin-top: 36rpx;
  height: 54rpx;
  justify-content: space-between;
  color: #A1A1A1;
}
.body .nav .group {
  display: flex;
  width: calc(100% + 10rpx);
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  border-radius: 27rpx;
}
.body .nav .groupActive {
  color: #fff;
  background-color: var(--themeColor);
}
.body .content {
  margin-top: 40rpx;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(185, 185, 185, 0.5);
  border-radius: 10rpx;
}
.body .content .content_header {
  display: flex;
  align-items: center;
  padding-top: 20rpx;
  padding-left: 20rpx;
}
.body .content .content_header .header_img {
  height: 92rpx;
  width: 92rpx;
  border-radius: 50%;
}
.body .content .content_header view {
  padding-left: 12rpx;
  padding-right: 12rpx;
}
.body .content .content_header .not_pass_img {
  width: 92rpx;
  height: 92rpx;
  margin-left: 70rpx;
}
.body .content .meal_type {
  display: flex;
  margin-left: 20rpx;
  height: 80rpx;
  align-items: center;
}
.body .content scroll-view ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.body .content .meal_images {
  white-space: nowrap;
  width: 630rpx;
  padding-left: 20rpx;
}
.body .content .meal_images .meal_image {
  display: inline-block;
  width: 160rpx;
  padding-right: 10rpx;
}
.body .content .meal_content {
  padding-left: 24rpx;
  font-size: 26rpx;
  color: #A1A1A1;
}
.body .content .sport {
  display: flex;
  color: #A1A1A1;
  margin-right: 20rpx;
  flex-wrap: wrap;
  font-size: 26rpx;
  margin: 32rpx auto;
}
.body .content .line {
  border-top: 0.5rpx solid #A1A1A1;
  width: 630rpx;
  margin: 0 auto;
}
.body .content .content_bottom {
  display: flex;
  height: 114rpx;
  margin: 0 auto;
}
.body .content .content_bottom view {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  width: 180rpx;
  border-radius: 30rpx;
  margin: 22rpx;
  color: #fff;
  background-color: var(--themeColor);
}
.body .content .content_bottom .remindActive {
  background-color: #FC6736;
}
.body .content .content_bottom .notPassActive {
  border: 1rpx solid var(--themeColor);
  color: var(--themeColor);
  background-color: #fff;
}
.body .nodata {
  display: flex;
  justify-content: center;
  width: 150rpx;
}
