page{
  background-color: rgba(255, 255, 255, 1);
}
.page {
  width: 750rpx;
  background-color: rgba(255, 255, 255, 1);
  align-items: center;
}

.data_view{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.layer1 {
  width: 690rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 4rpx 0px rgba(203, 203, 203, 0.5);
  border-radius: 6rpx;
  padding: 10rpx 30rpx 10rpx 30rpx;
  margin-top: 30rpx;
}

.data_title{
  font-size: 32rpx;
  color: #333333;
}

.data_items{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #DDDDDD;
}

.data_items_title{
  font-size: 28rpx;
  color: #333333;
}

.data_items_value{
  font-size: 28rpx;
  color: #333333;
}
